# Chat System 环境变量配置文件
# 复制此文件为 .env 并修改相应的值

# =================================
# 基本配置
# =================================
FLASK_ENV=production
FLASK_CONFIG=production

# 安全密钥 - 请务必更改为随机字符串
SECRET_KEY=your-super-secret-key-change-this-in-production

# =================================
# 数据库配置
# =================================
DATABASE_PATH=/var/www/chat_system/instance/chat_system.sqlite

# =================================
# 文件上传配置
# =================================
UPLOAD_FOLDER=/var/www/chat_system/instance/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# =================================
# 日志配置
# =================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/chat_system/app.log

# =================================
# CORS 配置
# =================================
# 允许的域名，用逗号分隔
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# =================================
# 服务器配置
# =================================
# 绑定地址和端口
BIND_HOST=127.0.0.1
BIND_PORT=5000

# Worker 进程数量（建议为 CPU 核心数 * 2 + 1）
WORKERS=3

# =================================
# 安全配置
# =================================
# 会话超时时间（秒）
PERMANENT_SESSION_LIFETIME=86400

# 是否强制 HTTPS
FORCE_HTTPS=true

# =================================
# 功能开关
# =================================
# 是否允许用户注册
ALLOW_REGISTRATION=true

# 是否允许文件上传
ALLOW_FILE_UPLOAD=true

# 最大房间数量
MAX_ROOMS=100

# 最大用户数量
MAX_USERS=1000

# =================================
# 第三方服务配置（可选）
# =================================
# 邮件服务配置
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-email-password

# Redis 配置（如果使用 Redis 作为消息队列）
# REDIS_URL=redis://localhost:6379/0

# 数据库 URL（如果使用其他数据库）
# DATABASE_URL=postgresql://user:password@localhost/chatdb
